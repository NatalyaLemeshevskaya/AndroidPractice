<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context="com.natallialemiasheuskaya.sreens.homework4.OwlActivity">


    <ImageView
        android:id="@+id/owlImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/owl_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBordeaux"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:text="@string/owl_button_start"
        android:textSize="@dimen/text_size"/>

    <Button
        android:id="@+id/owl_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBordeaux"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:text="@string/owl_stop_button"
        android:textSize="@dimen/text_size"/>

   </LinearLayout>

</LinearLayout>
