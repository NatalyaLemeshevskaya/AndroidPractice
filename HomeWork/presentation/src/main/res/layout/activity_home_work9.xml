<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="user"
            type="com.natallialemiasheuskaya.homework9.User">
        </variable>


    </data>


<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@{user.male ? @color/maleBackground:@color/femaleBackground }"
    android:orientation="horizontal"
    tools:context="com.natallialemiasheuskaya.homework9.HomeWork9Activity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:imageUrl="@{user.male? user.imageBoy: user.imageGirl}"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{"Name: "+user.firstName}'
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{"Surname: "+user.lastName}'
        android:textSize="@dimen/text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@{"Age: "+Integer.toString(user.age)}'
        android:textSize="@dimen/text_size"/>

    </LinearLayout>


</LinearLayout>

</layout>