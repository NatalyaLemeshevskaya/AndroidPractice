<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.natallialemiasheuskaya.sreens.homework1.HW1ViewModel" />

    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#86c9c2"
    tools:context="com.natallialemiasheuskaya.sreens.homework1.HomeWork1Activity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#7865bc"
        android:text="@{viewModel.text1}"
        android:onClick="@{()->viewModel.mix()}"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b_mix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#fff"
        android:text="@{viewModel.textButton}"
        android:onClick="@{()->viewModel.mix()}"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="#7865bc"
        android:text="@{viewModel.text2}"
        android:onClick="@{()->viewModel.mix()}"
        android:textSize="20dp" />

</LinearLayout>
</layout>