        android:background="#63adc1"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
