<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    <import type="android.view.View"/>

    <variable
        name="viewModel"
        type="com.natallialemiasheuskaya.dragon.screens.MainViewModel">
    </variable>
    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.natallialemiasheuskaya.dragon.screens.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <!--android:afterTextChanged="@{(name)->viewModel.searchImage(name)}"/>-->


 <android.support.v7.widget.RecyclerView

     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/recyclerView"
     android:entries="@{viewModel.list}">
 </android.support.v7.widget.RecyclerView>

</LinearLayout>
</layout>